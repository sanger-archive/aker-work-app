<%= render partial: 'order_header' %>

<%= bootstrap_form_for work_order, url: wizard_path, method: :put  do |f| %>

<%= render 'buttons', work_order: work_order, f: f %>

<table class="table table-striped table-condensed" id="set-list-table">
  <thead>
    <tr>
      <th></th>
      <th>Set Name</th>
      <th>Size</th>
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
    <% if (work_order.set_uuid) %>

      <% [work_order.original_set].each do |s| %>
      <tr>
        <td>
          <%= f.radio_button(:original_set_uuid, s.id) %>
        </td>
        <td>
          <%= s.name %>
        </td>
        <td>
          <%= pluralize(work_order.num_samples, "Sample") %>
        </td>
        <td>
          <%= time_ago_in_words(s.created_at) + " ago" %>
        </td>
      </tr>
      <% end %>

    <% else %>

      <% get_all_aker_sets.each do |s| %>
      <tr>
        <td>
          <%= f.radio_button(:original_set_uuid, s.id) %>
        </td>
        <td>
          <%= s.name %>
        </td>
        <td>
          <%= pluralize(s.meta["size"], "Sample") %>
        </td>
        <td>
          <%= time_ago_in_words(s.created_at) + " ago" %>
        </td>
      </tr>
      <% end %>

    <% end %>
  </tbody>
</table>
<% end %>

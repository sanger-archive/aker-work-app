<div class="row">
  <div class="col-md-12">
    <div style="margin: 10px 0">
      <% if (last_step?) %>
        <%= f.submit "Save & Exit", class: "btn btn-success pull-right" %>
      <% else %>
        <%= f.submit "Next", class: "btn btn-primary pull-right" %>
      <% end %>

      <% unless first_step? %>
        <%= link_to 'Previous', previous_wizard_path,
              class: 'btn btn-warning',
              data: { confirm: 'Are you sure you wish to go back? You will lose unsaved progress on the curent step' },
              style: "margin-right: 10px;" %>
      <% end %>

      <% unless work_plan.active? %>
        <%= link_to 'Cancel work plan', work_plan,
              method: :delete,
              class: 'btn btn-danger',
              data: { confirm: 'Are you sure you wish to cancel this work plan?' }
        %>
      <% end %>
    </div>
  </div>
</div>

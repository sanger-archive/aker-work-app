<% content_for :main_title do %>
Create Work Plan
<% end %>
<div class="row" id="progress-bar">
  <% wizard_steps.each_with_index do |step, index| %>
    <div class="col-xs-2 <%= "col-xs-offset-1" if index == 0 %> bs-wizard-step <%= step_classes(index) %>">
      <div class="text-center"><%= step_titles[index] %></div>
      <div class="progress">
        <div class="progress-bar"></div>
      </div>
      <% if work_plan.in_construction? %>
        <%= link_to '', step.to_s, class: "step-indicator",
              data: { confirm: 'Are you sure you wish to go back? You will lose unsaved progress on the curent step' } %>
      <% else %>
        <%= link_to '', step.to_s, class: "step-indicator" %>
      <% end %>
    </div>
  <% end %>
</div>
